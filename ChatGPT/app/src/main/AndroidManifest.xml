<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.fiap.chatgpt">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatGPT"
        tools:targetApi="31">
        <activity
            android:name=".ChatActivity"
            android:exported="true"> <!-- para ele ser visível -->
            <intent-filter> <!-- Para o Android saber que a Activity pode ser aberta como uma Action -->
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" /> <!-- Para ele não ser exibido como ícone executável -->
                <data android:mimeType="text/plain" /> <!-- A Activity trabalha com texto -->
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" /> <!-- Para ele ser exibido como ícone executável -->
            </intent-filter>
        </activity>
    </application>

</manifest>